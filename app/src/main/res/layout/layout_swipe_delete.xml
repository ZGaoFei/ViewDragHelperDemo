<?xml version="1.0" encoding="utf-8"?>
<com.zgf.viewdraghelperdemo.swipedelete.SwipeDeleteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_swipe_delete_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="delete"
            android:textColor="#ffffff"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="姓名："
            android:textColor="#cccccc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_name_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:textColor="#fa5b20"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

</com.zgf.viewdraghelperdemo.swipedelete.SwipeDeleteLayout>